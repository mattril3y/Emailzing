<UserControl x:Class="Emailzing.UI.Views.EmailNavigation"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Emailzing.UI.Views"
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="150">
	<ScrollViewer>
		<ItemsControl ItemsSource="{Binding Emails}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button>
						<TextBlock Text="{Binding DisplayMember}"/>
					</Button>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</ScrollViewer>
</UserControl>
